# 图片相关配置, 上传/输出图片路径（基于项目根目录）
ALLOWED_EXTENSIONS=png,jpg,jpeg
UPLOAD_FOLDER=upload/images
OUTPUT_FOLDER=output/images

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://your-api-base-url.com/v1
OPENAI_ENHANCE_MODEL=gpt-4o
OPENAI_CAPTION_MODEL=gpt-4o

# Tencent Cloud API Configuration
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here
TENCENT_SERVICE=tmt
TENCENT_HOST=tmt.tencentcloudapi.com
TENCENT_VERSION=2018-03-21
TENCENT_REGION=ap-beijing

# 小红书 cookie 配置
XHS_COOKIE=your_xhs_cookie_here

# SQLite database configuration
DATABASE_URI=sqlite:///app.db

# 基础路径配置
IMAGE_DIR=spider/images